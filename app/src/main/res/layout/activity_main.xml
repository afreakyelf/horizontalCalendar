<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:id="@+id/layout"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.example.calender.HorizontalCalender
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalCalender"
            android:textColor="#863A5E"
            app:calenderIcon="@drawable/cal"
            app:selectedColor="#000"
            app:strokeColor="@color/colorAccent"
            app:strokeWidth="4"
            app:dayView="true"
            app:showTodayIcon="true"
            app:unSelectedColor="#7485C9"
            app:closeIcon="@drawable/close"
            app:todayIcon="@drawable/today"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginTop="113dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontalCalender" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp"/>


</android.support.constraint.ConstraintLayout>